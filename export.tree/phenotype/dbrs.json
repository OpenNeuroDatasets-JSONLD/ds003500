{
  "MeasurementToolMetadata": {
    "Description": "Disruptive Behavior Rating Scale",
    "Citation": "Barkley, R.A., & Murphy, K.R. (1998). Attention hyperactivity disorder: A clinical workbook. New York: Guilford Press."
  },
  "item_1": {
    "LongName": "Question 1",
    "Description": "Fails to give close attention to details or makes careless mistakes in schoolwork.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_2": {
    "LongName": "Question 2",
    "Description": "Fidgets with hands or feet or squirms in seat.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_3": {
    "LongName": "Question 3",
    "Description": "Has difficulty sustaining attention in tasks or play activities.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_4": {
    "LongName": "Question 4",
    "Description": "Leaves seat in classroom or in other situations in which remaining seated is expected.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_5": {
    "LongName": "Question 5",
    "Description": "Does not seem to listen when spoken to directly.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_6": {
    "LongName": "Question 6",
    "Description": "Seems restless.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_7": {
    "LongName": "Question 7",
    "Description": "Does not follow through on instructions and fails to finish work.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_8": {
    "LongName": "Question 8",
    "Description": "Has difficulty playing or engaging in leisure activities quietly.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_9": {
    "LongName": "Question 9",
    "Description": "Has difficulty organizing tasks and activities.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_10": {
    "LongName": "Question 10",
    "Description": "Is on the go or acts as if driven by a motor.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_11": {
    "LongName": "Question 11",
    "Description": "Avoids, dislikes, or is reluctant to engage in work that requires sustained mental effort.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_12": {
    "LongName": "Question 12",
    "Description": "Talks excessively.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_13": {
    "LongName": "Question 13",
    "Description": "Loses things necessary for tasks or activities.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_14": {
    "LongName": "Question 14",
    "Description": "Blurts out answers before questions have been completed.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_15": {
    "LongName": "Question 15",
    "Description": "Is easily distracted.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_16": {
    "LongName": "Question 16",
    "Description": "Has difficulty awaiting turn.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_17": {
    "LongName": "Question 17",
    "Description": "Is forgetful in daily activities.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  },
  "item_18": {
    "LongName": "Question 18",
    "Description": "Interrupts or intrudes on others.",
    "levels": [
      "0: Never or rarely",
      "1: Sometimes",
      "2: Often",
      "3: Very often"
    ]
  }
}
